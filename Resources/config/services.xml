<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fitz.doctrine_installer" class="HugoSoltys\FitzBundle\Installer\DoctrineInstaller" public="true">
            <argument>%fitz.composer_path%</argument>
            <argument>%kernel.bundles%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>
        <service id="fitz.fos_user_installer" class="HugoSoltys\FitzBundle\Installer\FOSUserInstaller" public="true">
            <argument>%fitz.composer_path%</argument>
            <argument>%kernel.bundles%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>
    </services>
</container>
